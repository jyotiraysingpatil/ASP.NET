@model IEnumerable<sample.Models.Quizzes>

<h2>Available Quizzes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.title</td>
                <td>@quiz.description</td>
                <td>
                    <a asp-action="AttemptQuiz" asp-route-id="@quiz.quiz_id" class="btn btn-primary">Attempt Quiz</a>
                </td>
            </tr>
        }
    </tbody>
</table>
